test"NL de rolando si elimino todos los artefactos y agrego espejo" {
	rolando.agregaArtefacto(espadaDestino)
	rolando.agregaArtefacto(collarDivino)
	rolando.agregaArtefacto(mascaraOscura)
	rolando.agregaArtefacto(armaduraSinRefuerzo)
	rolando.agregaArtefacto(espejo)
	
	rolando.sacaArtefacto(espadaDestino)
	rolando.sacaArtefacto(collarDivino)
	rolando.sacaArtefacto(mascaraOscura)
	rolando.sacaArtefacto(armaduraSinRefuerzo)
	rolando.sacaArtefacto(espejo)
	
	rolando.agregaArtefacto(espejo)
	
	assert.equals(rolando.nivelDeHabilidadDeLucha(),1)
}

